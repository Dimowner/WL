<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:id="@+id/planned_workout_list_item_card"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:layout_marginTop="10dp"
	android:layout_marginLeft="10dp"
	android:layout_marginRight="10dp"
	card_view:cardCornerRadius="2dp">

	<RelativeLayout
		android:id="@+id/planned_workout_list_item_content_pnl"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_vertical">

		<TextView
			android:id="@+id/planned_workout_list_item_header"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:textStyle="bold"
			android:singleLine="true"
			android:layout_marginLeft="@dimen/keyline_1"
			android:layout_marginTop="@dimen/keyline_1"
			android:layout_marginRight="@dimen/keyline_1"/>

		<TextView
			android:id="@+id/planned_workout_plan_date"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/planned_workout_list_item_header"
			android:layout_margin="@dimen/keyline_1_minus_8dp"
			android:text="test"/>
		<TextView
			android:id="@+id/planned_workout_perform_date"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/planned_workout_plan_date"
			android:layout_margin="@dimen/keyline_1_minus_8dp"
			android:text="test"/>
		<TextView
			android:id="@+id/planned_workout_state"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/planned_workout_perform_date"
			android:layout_margin="@dimen/keyline_1_minus_8dp"
			android:text="test"/>
		<TextView
			android:id="@+id/planned_workout_duration"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/planned_workout_state"
			android:layout_margin="@dimen/keyline_1_minus_8dp"
			android:text="test"/>

		<TextView
			android:id="@+id/planned_workout_list_item_content"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/planned_workout_duration"
			android:layout_margin="@dimen/keyline_1"/>

	</RelativeLayout>
</android.support.v7.widget.CardView>
