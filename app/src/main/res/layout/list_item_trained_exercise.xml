<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center_vertical">

	<ImageView
		android:id="@+id/tr_exe_item_header_image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/keyline_1"
		android:layout_alignParentStart="true"
		android:layout_alignParentLeft="true"/>

	<TextView
		android:id="@+id/tr_exe_item_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/tr_exe_item_header_image"
		android:layout_toEndOf="@+id/tr_exe_item_header_image"
		android:singleLine="true"
		android:layout_margin="@dimen/keyline_1"/>

</RelativeLayout>
