<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".WorkoutMain">

	<android.support.v7.widget.Toolbar
			android:id="@+id/main_activity_toolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="?attr/colorPrimary"
			android:minHeight="?attr/actionBarSize" />

	<Button
			android:id="@+id/btn_show_exercises_list"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/main_activity_toolbar"
			android:layout_margin="16dp"
			android:text="Exercises list" />

	<Button
			android:id="@+id/btn_show_workout_list"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="16dp"
			android:layout_below="@+id/btn_show_exercises_list"
			android:text="Workout list" />

</RelativeLayout>
