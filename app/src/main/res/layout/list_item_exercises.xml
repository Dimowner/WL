<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
					 android:layout_width="match_parent"
					 android:layout_height="match_parent"
					 android:gravity="center_vertical"
					 android:orientation="horizontal">

	<ImageView
		android:id="@+id/exe_list_item_image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/keyline_1"
		android:layout_alignParentStart="true"
		android:layout_alignParentLeft="true"/>

	<TextView
		android:id="@+id/exe_list_item_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toLeftOf="@+id/exe_list_item_check"
		android:layout_toStartOf="@+id/exe_list_item_check"
		android:layout_toRightOf="@+id/exe_list_item_image"
		android:layout_toEndOf="@+id/exe_list_item_image"
		android:singleLine="true"
		android:layout_margin="@dimen/keyline_1"/>

	<CheckBox
		android:id="@+id/exe_list_item_check"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="@dimen/keyline_1"
		android:layout_marginEnd="@dimen/keyline_1"
		android:layout_alignParentRight="true"
		android:layout_alignBaseline="@+id/exe_list_item_text"
		android:layout_alignParentEnd="true"/>

</RelativeLayout>
