<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:clickable="false"
				  android:orientation="horizontal">

	<LinearLayout
		android:id="@+id/list_item_pnl"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="90"
		android:paddingLeft="16dp"
		android:orientation="vertical">

		<TextView
			android:id="@+id/list_item_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="16dp"
			android:textStyle="bold"/>

		<TextView
			android:id="@+id/list_item_content"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="16dp"/>
	</LinearLayout>

	<ImageButton
		android:id="@+id/btn_item_menu"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:contentDescription="@string/list_item_cont_desc"
		android:layout_weight="10"
		android:padding="16dp"
		android:background="@drawable/image_button_selector"
		android:src="@drawable/ic_dots_vertical_grey600_24dp"/>

</LinearLayout>