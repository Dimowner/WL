<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
					 xmlns:tools="http://schemas.android.com/tools"
					 android:layout_width="match_parent"
					 android:layout_height="match_parent"
					 android:orientation="vertical"
					 tools:context="ua.com.sofon.workoutlogger.ui.EditExerciseActivity">

	<android.support.v7.widget.Toolbar
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:background="?attr/colorPrimary"
		android:minHeight="?attr/actionBarSize"/>

	<EditText
		android:id="@+id/exercise_name_txt"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginRight="16dp"
		android:layout_marginLeft="56dp"
		android:layout_marginTop="16dp"
		android:layout_marginBottom="16dp"
		android:layout_below="@+id/toolbar"
		android:inputType="text"
		android:hint="@string/exer_pos_name"/>

	<EditText
		android:id="@+id/exercise_description_txt"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="56dp"
		android:layout_marginRight="16dp"
		android:layout_below="@+id/exercise_name_txt"
		android:inputType="textMultiLine"
		android:hint="@string/exer_pos_description"/>

</RelativeLayout>
