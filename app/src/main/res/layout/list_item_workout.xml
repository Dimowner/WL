<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:id="@+id/workout_list_item_card"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:layout_marginTop="10dp"
	android:layout_marginLeft="10dp"
	android:layout_marginRight="10dp"
	card_view:cardCornerRadius="2dp">

	<RelativeLayout
		android:id="@+id/workout_list_item_content_pnl"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_vertical">

		<!--<ImageView-->
			<!--android:id="@+id/workout_list_item_image"-->
			<!--android:layout_width="wrap_content"-->
			<!--android:layout_height="wrap_content"-->
			<!--android:layout_alignParentStart="true"-->
			<!--android:layout_margin="@dimen/keyline_1"-->
			<!--android:layout_alignParentLeft="true"/>-->

		<TextView
			android:id="@+id/workout_list_item_header"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:textStyle="bold"
			android:singleLine="true"
			android:layout_marginLeft="@dimen/keyline_1"
			android:layout_marginTop="@dimen/keyline_1"
			android:layout_marginRight="@dimen/keyline_1"/>
			<!--android:layout_toRightOf="@+id/workout_list_item_image"/>-->
		<!--android:layout_marginLeft="@dimen/keyline_1"-->
		<!--android:layout_marginTop="@dimen/keyline_1_minus_8dp"-->
		<!--android:layout_marginBottom="@dimen/keyline_1_minus_8dp"-->
		<!--android:layout_marginRight="@dimen/keyline_1_minus_8dp"-->
		<TextView
			android:id="@+id/workout_list_item_content"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/workout_list_item_header"
			android:layout_margin="@dimen/keyline_1"/>

	</RelativeLayout>
</android.support.v7.widget.CardView>
