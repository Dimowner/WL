<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView
		android:id="@+id/separator"
		style="?android:attr/listSeparatorTextViewStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/keyline_1"
		android:paddingRight="@dimen/keyline_1"
		android:paddingTop="@dimen/keyline_1_minus_8dp"
		android:paddingBottom="@dimen/keyline_1_minus_8dp"/>

	<RelativeLayout
		 android:layout_width="match_parent"
		 android:layout_height="wrap_content"
		 android:gravity="center_vertical">

		<ImageView
			android:id="@+id/exe_list_item_image"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/keyline_1"
			android:layout_alignParentStart="true"
			android:layout_alignParentLeft="true"/>

		<TextView
			android:id="@+id/exe_list_item_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@+id/exe_list_item_check"
			android:layout_toStartOf="@+id/exe_list_item_check"
			android:layout_toRightOf="@+id/exe_list_item_image"
			android:layout_toEndOf="@+id/exe_list_item_image"
			android:singleLine="true"
			android:layout_margin="@dimen/keyline_1"/>

		<CheckBox
			android:id="@+id/exe_list_item_check"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="@dimen/keyline_1"
			android:layout_marginEnd="@dimen/keyline_1"
			android:layout_alignParentRight="true"
			android:layout_alignBaseline="@+id/exe_list_item_text"
			android:layout_alignParentEnd="true"/>

	</RelativeLayout>
</LinearLayout>
