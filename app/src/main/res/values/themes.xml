<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- Base application theme. -->
	<style name="WorkoutTheme" parent="Theme.AppCompat.Light">
		<!-- Main theme colors -->
		<!-- colorPrimary is used for the default action bar background -->
		<item name="colorPrimary">@color/md_grey_300</item>
		<!--   darker variant for the status bar and contextual app bars -->
		<item name="colorPrimaryDark">@color/md_grey_400</item>
		<!--   theme UI controls like checkboxes and text fields -->
		<item name="colorAccent">@color/md_grey_500</item>

		<item name="android:textColorPrimary">@color/md_grey_800</item>
		<item name="android:textColorSecondary">@color/md_grey_700</item>

		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>

		<item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>

		<item name="actionBarIconColor">@color/md_grey_800</item>
		<item name="actionBarInsetStart">@dimen/keyline_2</item>
		<item name="spinnerBarInsetStart">@dimen/keyline_2_minus_16dp</item>
		<item name="popupItemBackground">?android:selectableItemBackground</item>
		<item name="photoItemForeground">?android:selectableItemBackground</item>
		<item name="photoItemForegroundBorderless">?android:selectableItemBackground</item>

		<item name="android:textColorLink">@color/theme_accent_2</item>

		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowBackground">@android:color/white</item>

	</style>
</resources>
